{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true,
        "inlineSources": true,
        "noEmitHelpers": false,
        "noImplicitAny": true,
        "declaration": true,
        "skipLibCheck": false,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "typeRoots": ["./node_modules/@types"],
        "lib": [
            "dom",
            "es6"
        ],
        "baseUrl": "",
        "rootDir": "",
        "paths": {
            "chips": ["./src/chips"],
            "datetime-mask": ["./src/datetime-mask"],
            "select-async": ["./src/select-async"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ],
    "files": [
        "./src/index.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "factories",
        "strictMetadataEmit": true
    }
}