{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true,
        "inlineSources": true,
        "noEmitHelpers": false,
        "noImplicitAny": true,
        "declaration": true,
        "skipLibCheck": false,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es6"
        ],
        "baseUrl": "",
        "paths": {
            "@angular/core": [
                "node_modules/@angular/core"
            ],
            "@angular/common": [
                "node_modules/@angular/common"
            ],
            "rxjs/*": [
                "node_modules/rxjs/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "files": [
        "./src/index.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "aot",
        "strictMetadataEmit": true
    }
}